<h2>Edit a new Landmark:</h2>



<form method="POST" action="/landmarks/<%= @landmark.id %>">

    <label for="landmark_name">Name</label>
    <input type="text" id="name" name="landmark[name]" value=<%= @landmark.name %> />

    <label for="landmark_year_completed">Year Completed</label>
    <input type="text" id="year_completed" name="landmark[year_completed]" value=<%= @landmark.year_completed %> />

    
    <a class="button" href="/landmarks">Landmarks</a>
    <a class="button" href="/">Home</a>
    <input type="submit" value="Edit Landmark" >
</form>

